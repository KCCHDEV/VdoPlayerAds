{
    "ads_directory": "ads",
    "display_duration": 10,
    "transition_effect": "fade",
    "autodetect_orientation": true,
    "force_orientation": null,
    "fullscreen": true,
    "background_color": [0, 0, 0],
    "supported_formats": [".jpg", ".jpeg", ".png", ".bmp", ".mp4", ".avi", ".mov", ".mkv", ".wmv"],
    "hardware_acceleration": true,
    "fps": 30,
    "volume": 0.7,
    "loop_ads": true,
    "shuffle_ads": false,
    "orientation_specific": {
        "16:9": {
            "display_duration": 10,
            "background_color": [0, 0, 0],
            "text_size": 74
        },
        "6:19": {
            "display_duration": 8,
            "background_color": [0, 0, 0],
            "text_size": 48
        }
    },
    "raspberry_pi": {
        "gpu_memory_split": 128,
        "enable_omxplayer": true,
        "enable_vlc_fallback": true,
        "optimize_for_performance": true,
        "disable_overscan": true
    }
}